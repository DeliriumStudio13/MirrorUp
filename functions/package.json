{
  "name": "employee-evaluation-functions",
  "description": "Cloud Functions for Employee Evaluation System",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
